<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
    <title>M-Car Share Damage Reports</title>
</head>
<body>
<div class="container-fluid" id="container">
    <div class="row">
        <div class="col-md-12" id="main">
            <% include ../partials/header %>
            <div class="row" id="contentPanel">
                <div class="col-md-3 col-sm-0"></div>
                <div class="col-md-6 col-sm-12" id="mainBottom">
                    <table class="table table-striped table-hover table-bordered" id="damageTable">
                        <form role="form" id="damageReportForm">
                        <thead>
                        <tr>
                            <th>
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Amount
                            </th>
                            <th>
                                Type ID
                            </th>
                            <th>
                                Bill ID
                            </th>
                            <th>
                                Customer ID
                            </th>
                            <th>
                                Car Plate Number
                            </th>
                        </tr>
                        </thead>
                        <tbody id="damageCarReportBody">
                        <% for(var i in damages) { %>
                        <tr id="damage-row-<%= damages[i]._id %>">
                            <td><input type="checkbox" class="myDamages" id="<%= damages[i]._id %>" onclick="btnDamageEditClicked('<%= damages[i]._id %>', '<%= damages[i].amount %>')"/></td>
                            <td><%= damages[i].description %></td>
                            <td name="d_r_amount" id="d_r_amount"><%= damages[i].amount %></td>
                            <td><%= damages[i].type %></td>
                            <td><%= damages[i].bill._id %></td>
                            <td><%= damages[i].bill.user %></td>
                            <td><%= damages[i].bill.car.carPlateNo %></td>
                        </tr>
                        <% } %>
                        </tbody>
                        </form>
                    </table>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="btn-group btn-group-justified">
                                <a id="modal-393652" href="#modal-container-393652" role="button"
                                   class="btn btn-default"
                                   data-toggle="modal" class="btn btn-default">Edit</a>
                            </div>
                            <div class="modal fade" id="modal-container-393652" role="dialog"
                                 aria-labelledby="myModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">

                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                                Ã—
                                            </button>
                                            <h4 class="modal-title" id="myModalLabel">
                                                Edit Damage Report
                                            </h4>
                                        </div>
                                        <form role="form" id="editDamageForm">
                                            <div class="modal-body">
                                                <p>Set the amount of damage: </p>
                                                <div class="form-group">
                                                    <label>
                                                        Amount ($)
                                                    </label>
                                                    <input type="amount" required class="form-control" name="dmgAmount"
                                                           id="dmgAmount" />
                                                    <input type="hidden" required class="form-control"
                                                           name="damageNo" id="damageNo">
                                                </div>
                                            </div>

                                            <div class="modal-footer">

                                                <button type="button" class="btn btn-default" data-dismiss="modal">
                                                    Cancel
                                                </button>
                                                <input type="submit" class="btn btn-primary" id="editReport"
                                                       value="Save changes"/>
                                            </div>
                                        </form>
                                    </div>

                                </div>

                            </div>

                        </div>
                    </div>
                </div>

                <div class="col-md-3 col-sm-0"></div>
            </div>
        </div>
    </div>
</div>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD5Pll40orqr8NI4RpnTxKlFE6GNXB1cK0"></script>
<script src="../js/jquery.min.js"></script>
<script src="../js/bootstrap.min.js"></script>
<script src="../js/scripts.js"></script>
<script src="../js/addCarScripts.js"></script>
<script src="../js/damageReport.js"></script>
</body>
</html>